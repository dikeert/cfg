[module/wlan]
type = internal/network
interface = wlp4s0
interval = 3.0

color = #891DE1

format-connected = <ramp-signal> <label-connected>
format-connected-underline = ${self.color}
label-connected = %{A1:/bin/bash -c rofi-wifi-menu.sh:}%essid%%{A}
label-connected-foreground = ${self.color}

format-disconnected = <label-disconnected>
format-disconnected-underline = ${colors.foreground-alt}

label-disconnected = %{A1:/bin/bash -c rofi-wifi-menu.sh:}no signal%{A}
label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${self.color}

